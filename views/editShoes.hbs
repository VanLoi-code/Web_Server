    <!-- cards -->
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
                    <div class="row pt-md-5 mt-md-3 mb-5">
                        <div class="col-xl-2 col-sm-2 p-2"></div>
                        <div class="col-xl-8 col-sm-8 p-2">
                            <form action="/editShoes/{{shoes._id}}" method="POST">
                                <div class="form-group">
                                    <label for="formGroupExampleInput">Ten:</label>
                                    <input type="text" class="form-control" id="formGroupExampleInput"
                                        placeholder="Nhap Ten" name="name" value="{{shoes.name}}">
                                </div>
                                <div class="form-group">
                                    <label for="formGroupExampleInput2">The Loai:</label>
                                    <select class="form-control" name="theLoai">
                                        <option value="{{theLoai._id}}" select>{{theLoai.name}}</option>
                                        {{#each theKind}}
                                        <option value="{{_id}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="formGroupExampleInput2">Gia:</label>
                                    <input type="text" class="form-control" id="formGroupExampleInput2"
                                        placeholder="Nhap Gia" name="gia" value="{{shoes.gia}}">
                                </div>
                                <div class="form-group">
                                    <label for="formGroupExampleInput2">Status:</label>
                                    <select class="form-control" name="status">
                                        <option selected value="{{shoes.status}}">{{shoes.status}}</option>
                                        <option value="true">true</option>
                                        <option value="false">false</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="file" class="form-control-file" id="exampleFormControlFile1" value="{{shoes.avatar}}" name="image">
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    Sua
                                </button>
                            </form>
                        </div>
                        <div class="col-xl-2 col-sm-2 p-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
